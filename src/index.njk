<script>
function togglePastEvents() {
  const pastEvents = document.getElementById('pastEvents');
  const btn = document.querySelector('.show-past-btn');
  const showText = btn.querySelector('.show-text');
  const hideText = btn.querySelector('.hide-text');
  
  if (pastEvents.style.display === 'none') {
    pastEvents.style.display = 'block';
    btn.classList.add('expanded');
    showText.style.display = 'none';
    hideText.style.display = 'inline';
  } else {
    pastEvents.style.display = 'none';
    btn.classList.remove('expanded');
    showText.style.display = 'inline';
    hideText.style.display = 'none';
  }
}

